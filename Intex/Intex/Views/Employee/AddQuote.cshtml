@{
    ViewBag.Title = "AddQuote";
}

<h2>Add a Quote</h2>
<div class="container">

    <h4>Customer Information</h4>
    <div class="row">
        <div class="form-group col-sm-4">
            <label class="control-label">Company Name</label>
            <input type="text" class="form-control" id="companyName" value="BigPharma" placeholder="Company Name" />
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Contact Name</label>
            <input type="text" class="form-control" id="customername" value="John Doe" placeholder="Customer Name" />
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Contact Phone</label>
            <input type="text" class="form-control" id="customeremail" value="(801) 555-3827" "Customer Phone" />
        </div>
    </div>

    <h4>Sample Information</h4>
    <div class="row">
        <div class="form-group col-sm-4">
            <label class="control-label">Molecular Mass</label>
            <input type="number" class="form-control" id="molecularmass" value="0.234" placeholder="Molecular Mass">
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Quantity in Miligrams</label>
            <input type="number" class="form-control" id="qtty" value="10.5733" placeholder="Quantity in Miligrams">
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Quote Amount</label>
            <input type="text" class="form-control" id="quoteamount" value="2,055.34" placeholder="Quote Amount" />
        </div>
    </div>

    <a href="/Employee" class="btn btn-default">Cancel</a>
    <a href="/Employee/ReviewQuotes" class="btn btn-primary">Submit Quote for Approval</a>
</div>