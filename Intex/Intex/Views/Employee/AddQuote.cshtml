@{
    ViewBag.Title = "AddQuote";
}

<h2>Add a Quote</h2>
<div class="container">
    <form class="form-horizontal">
        <div class="form-group">
            <label for="inputEmail3" class="col-sm-2 control-label">Name</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputName" placeholder="Name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Molecular Mass</label>
            <div class="col-sm-10">
                <input type="molecularmass" class="form-control" id="molecularmass" placeholder="Molecular Mass">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Quantity in Miligrams</label>
            <div class="col-sm-10">
                <input type="qtty" class="form-control" id="qtty" placeholder="Quantity in Miligrams">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Quote Amount</label>
            <div class="col-sm-10">
                <input type="quoteamount" class="form-control" id="quoteamount" placeholder="Quote Amount">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Customer Name</label>
            <div class="col-sm-10">
                <input type="customername" class="form-control" id="customername" placeholder="Customer Name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPassword3" class="col-sm-2 control-label">Customer Email</label>
            <div class="col-sm-10">
                <input type="customeremail" class="form-control" id="customeremail" placeholder="Customer Phone">
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Submit Quote for Approval</button>
            </div>
        </div>
    </form>
</div>